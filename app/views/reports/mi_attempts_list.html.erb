<% @title = 'Micro-Injection Attempts' %>

<div class="grid_12">
  <h2><%= @title %></h2>
</div>

<%= form_tag( { :controller => 'reports', :action => 'mi_attempts_list' }, :method => :get, :class => 'report-form' ) do |form| %>
  <%= render 'report_controls', :grouping => true %>
<% end %>

<% unless params[:commit].blank? %>
  <div class="report grid_12">
    <% if @report.nil? %>
      <p><em>Sorry, no <%= label %> found</em></p>
    <% else %>
      <table>
        <tr>
        <% for column in @columns.keys %>
          <th><%= column %></th>
        <% end %>
      </tr>

      <% for data_row in @report %>
        <tr>
        <% for key, col in @columns %>
          <td>
          <%= data_row[col] %>
          </td>
        <% end %>
        </tr>
      <% end %>
      </table>
    <% end %>
  </div>
<% end %>


