<%
  navigation_links = [
    ['Home', root_path],
    ['Gene Summary', gene_summary_open_mi_plans_path],
    ['Mouse Production', open_mi_attempts_path],
    ['Phenotyping', "#{root_path}open/phenotype_attempts"],
    ['Contacts for Production Centres', contactable_users_by_production_centre_path],
    ['Download of all Production', url_for(:controller => 'reports/mi_production', :action => :detail)]
  ]

  @tab2 = @tab
  @tab2 = 'Consortia, Centres and Contacts' if @tab == 'Consortia'
  @tab2 = 'Download of all Production' if @tab == 'Summary of all production'
%>

<ul>
  <% navigation_links.each do |link| %>
    <% clean_link = link[0].gsub(/[,\s]/, '').downcase %>
    <li <% if @tab2 == link[0] %>class="current"<% end %>>
      <%= link_to *link, :id => "#{clean_link}-link" %>
    </li>
  <% end %>
</ul>
