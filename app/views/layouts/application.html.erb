<!DOCTYPE html>
<html>

  <head>
    <title>Kermits 2 - <%= @tab || @title %></title>
    <%= stylesheet_link_tag 'reset' %>

    <% if @netzke_required %>
      <%= netzke_init %>
    <% else %>
      <link href="/extjs/resources/css/ext-all.css" media="screen"
            rel="stylesheet" type="text/css"/>
      <script src="/extjs/adapter/ext/ext-base-debug.js" type="text/javascript"></script>
      <script src="/extjs/ext-all-debug.js" type="text/javascript"></script>
    <% end %>

    <%= stylesheet_link_tag 'grid' %>
    <!--[if IE]>
    <%= stylesheet_link_tag 'grid_ie' %>
    <![endif]-->

    <%= stylesheet_link_tag 'application' %>

    <%= javascript_include_tag 'mi_attempts_view_config', 'application', :cache => true %>
    <%= csrf_meta_tag %>

    <%= yield :head %>
  </head>

  <body>
    <div id="container">
      <div id="header">
        <h1><%= link_to 'Kermits 2', root_path %></h1>
        <% if user_signed_in? %>
          <%= render '/shared/mainnav' %>
          <%= render '/shared/logged_in_header' %>
        <% end %>
      </div>

      <div id="messages">
        <%= flash_message :notice %>

        <%= flash_message :error %>

        <%= flash_message :alert %>
      </div>

      <% unless @tab %><h2><%= @title %></h2><% end %>

      <%= yield %>

      <div id="footer">
        <% unless GIT_REVISION.blank? %><p>Git revision: <%= GIT_REVISION %></p><% end %>
      </div>
    </div>
  </body>

</html>
