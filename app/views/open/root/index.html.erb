      <% end %>

      </tbody>
      </table>

    </div>
  </td>

  <tr>

  <td width="800" style="display: table-cell;vertical-align: top;">
    <h2 style="margin-bottom:0">IKMC production statistics</h2>
    <div class="report grid_12">

      <table style="width:100%;">
