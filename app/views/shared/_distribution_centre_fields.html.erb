<tr>
    <td>
        <%= f.select :centre_name, Centre.all.map(&:name), :include_blank => true %>
    </td>
    <td>
        <%= f.select :distribution_network, ApplicationModel::DistributionCentre::DISTRIBUTION_NETWORKS, :include_blank => true %>
    </td>
    <td>
        <%= f.select :deposited_material_name, DepositedMaterial.all.map(&:name), :include_blank => true %>
    </td>
    <td>
        Start: <%= f.text_field :start_date, :label => 'Start Date', :class => 'date-field' %>
        End:   <%= f.text_field :end_date, :label => 'End Date', :class => 'date-field' %>
    </td>
    <td>
        <% if f.object.new_record? %>
            <%= f.hidden_field :_destroy, :class => 'destroy-field' %>
            <%= link_to "remove", '#', class: "remove-row" %>
        <% else %>
            <%= f.hidden_field :_destroy, :class => 'destroy-field' %>
            <%= link_to "remove", '#', class: "hide-row" %>
        <% end %>
    </td>
</tr>
