<% @title = 'Micro-Injection Attempts: Month-by-Month Summary' %>

<div class="grid_12">
  <h2><%= @title %></h2>
</div>

<%= form_tag( { :controller => 'reports', :action => 'mi_attempts_monthly_production' }, :method => :get, :class => 'report-form' ) do |form| %>
  <%= render 'report_controls', :grouping => false %>
<% end %>

<% unless params[:commit].blank? %>
  <div class="report grid_12">
    <% if @report.nil? %>
      <p><em>Sorry, no production data found</em></p>
    <% else %>
      <%=raw @report.to_html %>
    <% end %>
  </div>
<% end %>
