<% @title = 'Log In' %>

<div id="user-form" class="grid_4 prefix_4 suffix_4">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <legend><%= @title %></legend>

      <table>
        <tr>
          <td>
            <%= f.label :email %>
            <%= f.email_field :email, :class => 'initial-focus' %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :password %>
            <%= f.password_field :password %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </td>
        </tr>
      </table>

      <div id="user-form-submit">
        <%= f.submit "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
