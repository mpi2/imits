      <tr>
        <td><a href = <%= gene_selection_open_mi_plans_path('q[marker_symbol_or_mgi_accession_id_ci_in]' => row['marker_symbol'], 'q[mi_plans_consortium_id_in]' => row['consortium_id'], 'q[mi_plans_production_centre_id_in]' => row['production_centre_id'])  %>><%= row['marker_symbol'] %></a></td>
        <td><a href = <%= gene_selection_open_mi_plans_path('q[marker_symbol_or_mgi_accession_id_ci_in]' => row['marker_symbol'], 'q[mi_plans_consortium_id_in]' => row['consortium_id'], 'q[mi_plans_production_centre_id_in]' => row['production_centre_id'])  %>><%= raw row['consortium'] %></td>
