<% @title = "Micro-Injection Summary" %>

<div class="container_12" style="overflow: hidden">

  <div class="prefix_4 grid_4">
    <form method="get" action="/emi_attempts">
      <div>
        <textarea cols="10" rows="10" name="search_terms" id="search_terms"><%= @search_terms.join "\n" %></textarea>
      </div>

      <div id="buttons">
        <input id="submit" type="submit" value="Search" />
        <button type="button" onclick="document.getElementById('search_terms').innerHTML = ''">Clear</button>
      </div>
    </form>
  </div>

  <div class="grid_4">
    <div style="line-height: 10em">
      <p>Enter some search terms, separated by new-lines.</p>
    </div>
  </div>

  <div class="clear"></div>

  <% if ! Rails.env.production? %>
  <div class="grid_12">
    <p id="sample_data_warning">SAMPLE DATA - no real data will be affected by making modifications here</p>
  </div>
  <% end %>

</div>

<div>
  <%= emi_attempts_table(@search_terms) %>
</div>
