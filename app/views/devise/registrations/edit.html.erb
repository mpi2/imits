<div id="user-form" class="grid_6 prefix_3 suffix_3">
  <%= form_for :user, :url => registration_path(:user), :html => { :method => :put } do |f| %>
    <%= devise_error_messages! %>
    
    <fieldset>
      <legend>Change Password</legend>
      
      <table>
        <tr>
          <td><%= f.label :current_password, 'Current Password' %></td>
          <td><%= f.password_field :current_password, :class => 'initial-focus' %></td>
        </tr>
        <tr>
          <td><%= f.label :password, 'New Password' %></td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, 'Confirm New Password' %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>
      </table>
      
      <div id="user-form-submit">
        <%= f.submit 'Change password' %>
      </div>
    </fieldset>
  <% end %>
</div>
