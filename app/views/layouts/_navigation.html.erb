<%
  navigation_links = [
    ['Home', root_path],
    ['Gene Selection', gene_selection_mi_plans_path],
    ['Plans', mi_plans_path],
    ['Create MI Attempt', new_mi_attempt_path],
    ['Mouse Production', mi_attempts_path('q[production_centre_name]' => current_user.production_centre.name)],
#    ['Genotype Verification', quality_overview_groupings_path],
    ['Phenotyping', phenotype_attempts_path('q[production_centre_name]' => current_user.production_centre.name)],
    ['Reports', reports_path],
    ['Manual', request.env['SCRIPT_NAME'].to_s+'/manual.pdf']
  ]

  if current_user.admin?
    navigation_links.push ['Solr Update Queue', solr_update_queue_items_path]
  end
%>

<ul>
  <% navigation_links.each do |link| %>
    <li <% if @tab == link[0] %>class="current"<% end %>>
      <%= link_to *link %>
    </li>
  <% end %>
</ul>
