<% @title = 'Log In' %>

<div id="user-form" class="grid_6 prefix_3 suffix_3">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
      <legend><%= @title %></legend>
      <table>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, :class => 'initial-focus' %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
        </tr>
        <% if devise_mapping.rememberable? -%>
          <tr>
            <td><%= f.label :remember_me %></td>
            <td><%= f.check_box :remember_me %></td>
          </tr>
        <% end -%>
      </table>

      <div id="user-form-submit">
        <%= f.submit "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
