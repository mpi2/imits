<div class="grid_12">
  <h2>Create a Pipeline</h2>
  
  <%= form_for @pipeline do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => 'text' %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_field :description, :class => 'text' %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>
  
  <%= link_to 'Back', [:targ_rep, :pipelines] %>
</div>