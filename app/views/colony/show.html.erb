-->
<%#= debug @insertions %>

<% if ! @insertions.empty? %>
  <h2>Insertions</h2>
  <% @insertions.each do |i| %>
  <p><%= i %></p>
<% end %>
<% else %>
    <h2>Insertions</h2>
<p>None</p>
<% end %>

<hr style="clear:both;"/>
<%#= debug @deletions %>

<% if ! @deletions.empty? %>
  <h2>Deletions</h2>
  <% @deletions.each do |d| %>
  <p><%= d %></p>
  <% end %>
<% else %>
    <h2>Deletions</h2>
<p>None</p>
<% end %>




<% end %>


