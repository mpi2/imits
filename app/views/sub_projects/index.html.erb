<style type="text/css">

table.bottomBorder td, th {
 border-bottom:1px dotted black;
 padding: 5px;
}
</style>

<h1>Sub Projects</h1>
</br>
<% form_for @sub_project_new, :url => { :action => "create" } do |f| %>
  <%= f.label :name, 'Enter new Sub-Project name'%>
  <%= f.text_field :name%>
  <%= f.submit%>
<% end %></br>

<h2><u>Current sub-projects</u></h2>
<table class="bottomBorder">
  <% @sub_project.each do |project| %>
    <% if !project.name.blank? %>
      <tr><td><%= project.name %></td>
      <% if !project.miplan?%>
        <td width=100 align="right"><%= button_to '  Delete  ', {:action => "destroy", :id => project.id}, :confirm => "Are you sure you want to delete '#{project.name}'", :method => :delete %></td>
      <% else %>
        <td></td>
      </tr>
      <% end %>
    <% end %>
  <% end %>
</table></br>
