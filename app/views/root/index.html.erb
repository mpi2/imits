<% @tab = "Home" %>

<div class="grid_12">
  <h2>Welcome to iMits</h2>

  <p>What would you like to do today?</p>

  <br/>

  <% if Rails.application.config.show_search_page %>

  <div class="homepage-links" id = 'gene_search' name = 'gene_search' ><input type ='text' id = 'search_for_gene' name = 'search_for_gene'>
    <button  onclick="populate_allele_grid()" id = 'gene_search_submit'>Search</button>
    <p>Search by Marker symbol or MGI number</p>
  </div>

  <% end %>

</div>

<div class="grid_12">
  <%= render 'open/root/mpi2_grid' %>
</div>

<div class="grid_8">
  <div class="homepage-links">
    <a href="<%= gene_selection_mi_plans_path %>">
      <h3>Gene Selection / Micro-Injection Planning</h3>
      <p>Register interest (on behalf of your consortium) in micro-injecting some genes</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= mi_attempts_path('q[production_centre_name]' => current_user.production_centre.name) %>">
      <h3>Search For &amp; Edit Micro-Injection Attempts</h3>
      <p>Search for and edit data on existing micro-injection attempt records</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= new_mi_attempt_path %>">
      <h3>Create Micro-Injection Attempts</h3>
      <p>Enter data on new micro-injection attempts</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= open_phenotype_attempts_path() %>">
      <h3>Search For Phenotype Attempts</h3>
      <p>Search for data on existing phenotype attempt records</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= reports_path %>">
      <h3>Reporting</h3>
      <p>View reports on all data in iMits</p>
    </a>
  </div>
</div>

<div class="grid_4">
  <div class="homepage-links">
    <a href="<%= consortia_path %>">
      <h4>Consortia</h4>
      <p>
        View a list of all consortia submitting data to iMits and the production centres
        that are working as part of these consortia
      </p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= users_by_production_centre_path %>">
      <h4>Users/Production Centres</h4>
      <p>View a list of all iMits users and the production centre that they belong to</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= centres_path %>">
      <h4>Manage Production Centres</h4>
      <p>Add/Remove iMits production centres</p>
    </a>
  </div>

  <% if current_user.can_see_sub_project? %>
    <div class="homepage-links">
    <a href="<%= sub_projects_path %>">
      <h4>Manage Sub projects</h4>
      <p>Add/Remove iMits sub projects</p>
    </a>
  </div>
  <% end %>

  <div class="homepage-links">
    <a href="<%= production_goals_path %>">
      <h4>Manage Production Goals</h4>
      <p>Add/Remove iMits production goals</p>
    </a>
  </div>

  <div class="homepage-links">
    <a href="<%= tracking_goals_path %>">
      <h4>Manage IMPC Centre Goals</h4>
      <p>Add/Remove iMits IMPC centre goals</p>
    </a>
  </div>
</div>
