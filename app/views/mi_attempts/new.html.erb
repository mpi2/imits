<% @tab = 'Create' %>

<% content_for :head do %>
  <%= javascript_include_tag('mi_attempts/shared') %>
  <%= javascript_include_tag('mi_attempts/new') %>
  <%= javascript_tag "martSearchClonesPath = '#{mart_search_clones_path}.json';" %>
<% end %>

<div class="grid_8 prefix_2 suffix_2">
  <%= form_tag nil, :class => 'new mi-attempt' do %>
    <fieldset class="collapsible">
      <legend>ES Cell Clone Details</legend>
      <div>
        <div id="clone-selector"></div>
      </div>
    </fieldset>
  <% end %>
</div>

<div class="grid_8 prefix_2 suffix_2">
  <%= form_for @mi_attempt, :html => {:class => 'new mi-attempt'} do |form| %>
    <div id="rest-of-form">
      <%= form.hidden_field 'clone_name' %>
      <%= render 'form_contents', :form => form, :submit_text => 'Create' %>
    </div>
  <% end %>
</div>
