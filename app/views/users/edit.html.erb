<% @title = 'Edit Profile' %>

<div id="user-form" class="grid_4 prefix_4 suffix_4">
  <%= form_for :user, :url => user_path, :html => { :method => :put } do |form| %>

    <fieldset>
      <legend><%= 'Change Password' %></legend>

      <table>
        <tr>
          <td>
            <%= form.label :current_password, 'Current Password' %>
            <label>(required for profile changes)</label>
            <%= form.password_field :current_password, :class => 'initial-focus' %>
          </td>
        </tr>
      </table>
    </fieldset>

    <fieldset>
      <legend><%= 'Edit Details' %></legend>

      <table>
        <tr>
          <td>
            <%= form.label :name %>
            <%= form.text_field :name %>
          </td>
        </tr>

        <tr>
          <td>
            <%= form.label :production_centre %>
            <span><%= resource.production_centre.name %></span>
          </td>
        </tr>
      </table>
    </fieldset>

    <fieldset>
      <legend><%= 'Update Password' %></legend>

      <table>
        <tr>
          <td>
            <%= form.label :password, 'New Password' %>
            <%= form.password_field :password %>
          </td>
        </tr>

        <tr>
          <td>
            <%= form.label :password_confirmation, 'Confirm New Password' %>
            <%= form.password_field :password_confirmation %>
          </td>
        </tr>
      </table>
    </fieldset>

    <div id="user-form-submit">
      <%= form.submit 'Save Changes' %>
    </div>

  <% end %>
</div>
