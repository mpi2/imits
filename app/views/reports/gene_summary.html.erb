<% @title = 'Gene Summary' %>

<h2><%= @title %></h2>

<%= form_tag( { :controller => 'reports', :action => 'gene_summary' }, :method => :get, :class => 'report-form' ) do |form| %>
  <%= render 'report_controls', :grouping => false %>
<% end %>

<% unless params[:commit].blank? %>
  <div id="report">
    <%=raw @report.to_html %>
  </div>
<% end %>
