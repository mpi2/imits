<div class="grid_12">
  <h2>History of Changes for Micro-Injection Attempt <%= @mi_attempt.id %></h2>

  <%= link_to "back to micro-injection attempt page", mi_attempt_path(@mi_attempt), { :class => 'button back' } %>

  <div class="report">
    <table>
      <thead>
        <tr>
          <th>Version</th>
          <th>Date</th>
          <th colspan="2">Changes</th>
        </tr>
      </thead>
      <tbody>
        <% @mi_attempt.audits.each do |revision| %>
          <tr>
            <td><%= revision.version %></td>
            <td><%= revision.created_at.to_s(:long) %></td>
            <% if revision.action == "create" %>
              <td colspan="2">creation of the object</td>
            <% else %>
              <td><%= revision.changes.keys.join('<br />') %></td>
              <td>
                <% values = revision.changes.values.collect { |val| "'#{val[0] ||= 'null'}' => '#{val[1]}'" } %>
                <%= values.join('<br />') %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

