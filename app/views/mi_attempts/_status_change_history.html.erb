<fieldset class="collapsible">
  <legend>Status Change History</legend>
  <div class="report">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% mi_attempt.mi_plan.status_stamps.each do |status_stamp| %>
          <tr>
            <td><%= localize status_stamp.created_at, :format => :imits %></td>
            <td><%= status_stamp.name %></td>
          </tr>
        <% end %>

        <% mi_attempt.status_stamps.each do |status_stamp| %>
          <tr>
            <td><%= localize status_stamp.created_at, :format => :imits %></td>
            <td><%= status_stamp.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</fieldset>
