<% if user_signed_in? %>
  You are logged in as <%= current_user.email %><br/>
  <%= link_to 'Edit profile', user_path %>
  <% if current_user.admin? %>
   | <%= link_to 'Admin', admin_path, :class => @tab == 'Admin' ? 'active' : '' %>
  <% end %>
   | <%= link_to 'Logout', destroy_user_session_path %>
  <% if request.path =~ /\/targ_rep/ -%>
    | <%= link_to 'Go to iMits', root_path %>
  <% else -%>
    | <%= link_to 'Go to TargRep', targ_rep_root_path %>
  <% end -%>

<% else %>
  <% url_str = request.fullpath['/open/'] ? request.fullpath.gsub(/\/open\//,'/') : new_user_session_path %>
  <%= link_to "login", url_str, :class => "ss_sprite ss_key" %>
  <% if request.path =~ /\/targ_rep/ -%>
    | <%= link_to 'Go to iMits', root_path %>
  <% else -%>
    | <%= link_to 'Go to TargRep', targ_rep_root_path %>
  <% end -%>
<% end %>