<% content_for :post_js_footer do %>
  <%= javascript_include_tag('contacts/shared') %>
<% end %>
<div id="contact-new" class="grid_8 prefix_2 suffix_2">
    <fieldset class="static">
      <legend>Gene</legend>
        <% if @gene %>
          <label>Marker Symbol</label>
          <%= @gene.marker_symbol %>
          <label>MGI Accession Id</label>
          <%= @gene.mgi_accession_id %>
        <% end %>
    </fieldset>
  <%= form_tag search_email_contacts_path, :method => :get, :remote => true do %>
    <fieldset id="search-email-field">
      <legend>Email</legend>
        <div class="email">
          <%= text_field_tag :email, params[:email] %>
          <%= hidden_field_tag :mgi_accession_id, params[:mgi_accession_id] %>
          <%= submit_tag "Check email", :name => nil %>
        </div>
    </fieldset>
  <% end %>
</div>
