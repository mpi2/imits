<%= javascript_include_tag 'dynamic_esc_qc_conflict_selects' %>

<div class="grid_12">
  <h2><%= @allele.mgi_accession_id %><% if @allele.project_design_id.blank? %> | Project Design ID: <%= @allele.project_design_id %><% end %></h2>
</div>

<%= form_for @allele do |f| %>
  <%= render :partial => 'form', :locals => { :f => f, :allele => @allele } %>

  <div class="grid_12">
    <button type="submit" class="button positive">
      <%= image_tag "targ_rep/led-icons/accept.png", :alt => "" %> Update
    </button>
    <% if @allele.class.targeted_allele? %><a href="<%= targ_rep_allele_path(@allele) %>" class="button negative"><% end %>
    <% if @allele.class.hdr_allele? %><a href="<%= targ_rep_hdr_allele_path(@allele) %>" class="button negative"><% end %>
    <% if @allele.class.crispr_targeted_allele? %><a href="<%= targ_rep_crispr_targeted_allele_path(@allele) %>" class="button negative"><% end %>
    <% if @allele.class.gene_trap? %><a href="<%= targ_rep_gene_trap_path(@allele) %>" class="button negative"><% end %>
      <%= image_tag "targ_rep/led-icons/cross.png", :alt => "" %> Back
    </a>
  </div>
<% end %>